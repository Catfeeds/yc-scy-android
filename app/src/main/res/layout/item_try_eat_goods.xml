<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_goodslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_goods_title"
            android:layout_width="@dimen/goods_img_size"
            android:layout_height="@dimen/goods_img_size"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:maxLines="2"
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                tools:text="好吃的葡萄" />

            <TextView
                android:layout_marginBottom="15dp"
                android:maxLines="2"
                android:id="@+id/tv_goods_slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:textColor="@color/txt_gray2"
                android:textSize="14sp"
                tools:text="好吃的葡萄好吃" />


        </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/btn_state"
                        android:textColor="@color/white"
                        android:background="@drawable/selector_red"
                        android:text="评价"
                        android:textSize="14sp"
                        android:layout_width="55dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_time"
                        android:layout_marginTop="10dp"
                        android:text="12121221"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


    </LinearLayout>
</layout>
